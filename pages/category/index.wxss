page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_menu {
  flex: 5;
}
.cates .cates_container .right_menu .menu_item2 .right_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .right_menu .menu_item2 .right_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_menu .menu_item2 .right_content {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_menu .menu_item2 .right_content navigator {
  width: 33.333%;
  text-align: center;
}
.cates .cates_container .right_menu .menu_item2 .right_content navigator image {
  width: 50%;
}
